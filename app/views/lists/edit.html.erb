<div class="edit-main">
 <h1>編集画面</h1>

 <%= form_with model: @list, url:list_path(@list.id), method: :patch do |f| %>

<div class="edit-title">
 <h4>タイトル</h4>
 <%= f.text_field :title %>
</div>

<div class="edit-body">
 <h4>本文</h4>
 <%= f.text_area :body %>
</div>

<div class="edit-image">
 <h4>画像</h4>
 <%= f.file_field :image, accept: "image/*" %>
</div>

<div class="edit-submit">
 <%= f.submit "保存" %>
</div>
<% end %>
</div>